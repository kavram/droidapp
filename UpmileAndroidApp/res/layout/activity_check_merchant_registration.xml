<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".CheckMerchantRegistrationActivity" >

    
    <LinearLayout
        android:id="@+id/check_merchant_register_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

       <TextView
            android:id="@+id/check_register_status_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="visible" />
        
       </LinearLayout>    
       
     <ScrollView
     	android:id="@+id/check_merchant_register_form"
     	android:layout_width="match_parent"
     	android:layout_height="match_parent"
     	android:visibility="gone" >
    
        
        <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".CheckMerchantRegistrationActivity" >

       <TextView
            android:id="@+id/status_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="visible" />
            
            
       		<Button
            	    android:id="@+id/checkreg_ok_button"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:layout_alignParentBottom="true"
            	    android:layout_alignParentRight="true"
            	    android:paddingLeft="32dp"
            	    android:paddingRight="32dp"
            	    android:text="@string/register_ok_button" />
        </RelativeLayout>
            
	</ScrollView>            
    
    
</merge>